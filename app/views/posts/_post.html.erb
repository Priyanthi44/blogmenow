<%= div_for post, class: 'row' do %>
  <div class='col-md-10'>
    <h2><%= link_to post.title, post %></h2>
    <div>
      <% post.tags.each do |tag| %>
        <%= "#{tag.name} (#{@tags_posts_count[tag.id]})" %>
      <% end %>
    </div>

  </div>
  <div class='col-md-2'>
    <%= link_to "Edit", edit_post_path(post), class: 'btn btn-default' %>
  </div>
<% end %>