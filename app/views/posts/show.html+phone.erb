<div class="navbar">
  <div class="navbar-inner">
    <div class="left sliding">
      <%= link_to posts_path, class: 'back link' do %>
        <i class='icon icon-back-blue'></i>
        <span>Back</span>
      <% end %>
    </div>
    <div class='center'>
      <%= @post.title %>
    </div>
  </div>
</div>

<div class='page'>
  <div class='page-content'>
    <div class='content-block-title'><%= @post.title %></div>
    <div class='content-block'>
      <div class='content-block-inner'>
        <%= simple_format @post.body %>
      </div>
    </div>
  </div>
</div>